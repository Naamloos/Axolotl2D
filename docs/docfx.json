{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../../",
          "files": ["**/*.csproj"],
          "exclude": ["**/bin/**", "**/obj/**", "**/Axolotl2D.Example/**"]
        }
      ],
      "output": "api",
      "memberLayout": "separatePages"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.{md,yml}"],
        "exclude": ["_site/**"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern", "templates/material"],
    "postProcessors": [
      "ExtractSearchIndex"
    ],
    "globalMetadata": {
      "_appName": "Axolotl2D",
      "_appTitle": "Axolotl2D",
      "_appLogoPath": "images/logo_small.png",
      "_appFaviconPath": "images/favicon.ico",
      "_appFooter": "Â© 2025 Ryan de Jonge (Naamloos)",
      "_enableSearch": true,
      "pdf": false
    }
  }
}
